---
import { cn } from '@web/lib/utils'
import { ThemeToggle } from '@web/components/theme-toggle'
import { env } from '@web/lib/env'
import { Logo } from '@web/components/logo'

type Props = {
  className?: string
}

const { className } = Astro.props
---

<footer class={cn(className)}>
  <div class="flex flex-col items-center justify-between gap-4 py-10 md:h-24 md:flex-row md:py-0">
    <div class="flex flex-col items-center gap-x-6 gap-y-4 px-8 md:flex-row md:px-0">
      <a href="/">
        <span class="sr-only">Home Page</span>
        <Logo size={30} />
      </a>

      <p class="text-center text-sm leading-loose md:text-left balance-text">
        Built by{' '}
        <a
          href={env.GITHUB_REPOSITORY_URL}
          target="_blank"
          rel="noreferrer"
          class="font-medium underline underline-offset-4"
        >
          dinsterizer
        </a>
        . Based on{' '}
        <a
          href="https://github.com/shadcn-ui/taxonomy"
          target="_blank"
          rel="noreferrer"
          class="font-medium underline underline-offset-4"
        >
          shadcn-ui/taxonomy
        </a>
        . Hosted on{' '}
        <a
          href="https://pages.cloudflare.com/"
          target="_blank"
          rel="noreferrer"
          class="font-medium underline underline-offset-4"
        >
          Cloudflare Pages
        </a>
        . The source code is available on{' '}
        <a
          href={env.GITHUB_REPOSITORY_URL}
          target="_blank"
          rel="noreferrer"
          class="font-medium underline underline-offset-4"
        >
          GitHub
        </a>
        .
      </p>
    </div>

    <ThemeToggle variant="ghost" client:idle />
  </div>
</footer>
